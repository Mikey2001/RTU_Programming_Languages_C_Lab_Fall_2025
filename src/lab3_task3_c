#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Define struct Student
struct Student {
    char name[50];
    int id;
    float grade;
};

int main(void) {
    int n;
    struct Student *students = NULL;

    printf("Enter number of students: ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid input.\n");
        return 1;
    }

    // Allocate memory for n students
    students = (struct Student *)malloc(n * sizeof(struct Student));
    if (students == NULL) {
        printf("Memory allocation failed.\n");
        return 1;
    }

    // Input data for each student
    for (int i = 0; i < n; i++) {
        printf("Enter data for student %d (Name ID Grade): ", i + 1);
        scanf("%49s %d %f", students[i].name, &students[i].id, &students[i].grade);
    }

    // Display all records
    printf("\n%-8s %-12s %-6s\n", "ID", "Name", "Grade");
    for (int i = 0; i < n; i++) {
        printf("%-8d %-12s %-6.1f\n",
               students[i].id,
               students[i].name,
               students[i].grade);
    }

    // Free memory
    free(students);
    students = NULL;

    return 0;
}
